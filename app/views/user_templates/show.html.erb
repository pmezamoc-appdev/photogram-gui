

<h1><%=@the_user.username%></h1>

<dl>
  <dt>ID</dt>
  <dd><%=@the_user.id%></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<%=@the_user.id%>" >
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" placeholder="Enter a username..." value="<%=@the_user.username%>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%=@the_user.own_photos.count%>)</h2>

<table border = "1">
  <tr>
    <th>
    Image
  </th>
    <th>
    Owner
    </th>
    <th>
    Caption
    </th>
    <th>
    Posted
    </th>
    <th>
    Details
    </th>
</tr>

<%@the_user.own_photos.each do |photo|%>
<tr>
    <td>
    <img src = <%=photo.image%>
    </td>
    <td>
    <%#=User.where({:id => photo.owner_id}).first.username%>
    <%=photo.poster.username%>
    </td>
    <td>
    <%=photo.caption%>
    </td>
    <td>
    <%=photo.created_at%>
    </td>
    <td>
    <a href=""> Show details </a>
    </td>
  </tr>
<%end%>
